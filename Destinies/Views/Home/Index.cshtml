@model IEnumerable<Destinies.Models.Destiny>

@{
    ViewBag.Title = "Reservas";
}

<div class="container">
    <br />
    <h4 class="text-center mb-5">Destinos que puedes visitar</h4>
    <div class="row">
        @foreach (var destiny in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img src="@destiny.photo" class="card-img-top" alt="Foto de @destiny.name">
                    <div class="card-body">
                        <h5 class="card-title">@destiny.name</h5>
                        <p class="card-text">@destiny.description</p>
                        <p class="card-text"><strong>$@destiny.price</strong></p>
                        <a href="#" class="btn btn-primary">Reservar</a>
                    </div>
                </div>
            </div>
            if (@Model.ToList().IndexOf(destiny) % 3 == 2)
            {
            @:</div><div class="row mt-3">
            }
        }
    </div>
</div>

